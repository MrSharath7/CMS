 <!-- add user form -->
         <!-- form handling -->
         <form action="/api/users" method="POST" id="add_user">
            <div class="add-user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="name" value="" placeholder="Example Name">
                </div>
                <div class="form-group">
                    <label for="email" class="text-light">Email</label>
    
                    <input type="text" name="email" value="" placeholder="example@gmail.com">
                </div>
                <div class="form-group">
                    <label for="mobile" class="text-light">Phone number</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" name="mobile" value="" placeholder="1234567890">
                </div>
                <br>
                <div class="form-group">
                    <label for="date" class="text-light">Birth date</label>
                    <input type="date" name="date" value="" placeholder="26/01/2001">
                </div>
                <br>
                <div class="form-group">
                    <label for="address" class="text-light">Address Line</label>
                    <input type="text" name="address" value="" placeholder="Door no: 45/2634/412">
                </div>
                <div class="form-group">
                    <label for="city" class="text-light">City</label>
                    <input type="text" name="city" value="" placeholder="Hyderabad">
                </div>
                <div class="form-group">
                    <label for="pin code" class="text-light">Pin code</label>
                    <input type="text" name="pincode" value="" placeholder="518006">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save Contact</button>
                </div>
            </div>
        </form>