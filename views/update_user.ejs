
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Contacts</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Contact</h2>
            <span class="text-light">Use the below form to Update a Contact</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="mobile" class="text-light">Phone number</label>
            <input type="text" name="mobile" value="<%= user.mobile%>" placeholder="1234567890">
        </div>
        <br>
        <div class="form-group">
            <label for="date" class="text-light">Birth date</label>
            <input type="date" name="date" value="<%= user.date%>" placeholder="26/01/2001">
        </div>
        <br>
        <div class="form-group">
            <label for="address" class="text-light">Address Line</label>
            <input type="text" name="address" value="" placeholder="Door no: 45/2634/412">
        </div>
        <div class="form-group">
            <label for="city" class="text-light">City</label>
            <input type="text" name="city" value="<%= user.city%>" placeholder="Hyderabad">
        </div>
        <div class="form-group">
            <label for="pin code" class="text-light">Pin code</label>
            <input type="text" name="pincode" value="<%= user.pincode%>" placeholder="518006">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

